[credential]
  helper = osxkeychain           ###################  For OS X  ###################
  helper = cache --timeout=86400 ################### For Ubuntu ###################

[merge]
  tool = splice

[mergetool "splice"]
  cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
  trustExitCode = true
